<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".Branch.UpdateBranch">


    <TextView
        android:id="@+id/textViewEditBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Edit Branch"
        android:textColor="@color/lotus_green"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/updatebranchNameEdit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the Branch Name"
        android:padding="12dp"
        android:textSize="20dp"
        android:layout_below="@id/textViewEditBranch"
        android:background="@drawable/login_border"
        android:layout_marginTop="20dp"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"/>

    <EditText
        android:id="@+id/updatebranchLocationEdit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Enter the Branch Location"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="20dp"
        android:layout_below="@id/updatebranchNameEdit"
        android:background="@drawable/login_border"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatebranchLocationEdit"
        android:layout_marginTop="20dp"
        android:weightSum="3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/lotus_red"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:contentDescription="@string/back_button_description"
            android:onClick="onBackButtonClick"/>

        <Button
            android:id="@+id/buttonEditDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="@color/lotus_yellow"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>